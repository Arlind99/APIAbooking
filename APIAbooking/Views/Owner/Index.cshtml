@using ReflectionIT.Mvc.Paging
@addTagHelper *, ReflectionIT.Mvc.Paging
@model ReflectionIT.Mvc.Paging.PagingList<APIAbooking.Models.Room>

<p class="text-warning">@ViewBag.Description</p>
<a class="btn btn-success" asp-action="Create" asp-controller="Room" asp-route-id="1">Create a new post</a>
<form method="get">
    <table class="table table-striped">
        <thead>
            <tr>
                <th> @Html.DisplayNameFor(model => model.MaxGuest)</th>
                <td> @Html.DisplayNameFor(model => model.NrBathroom)</td>
                <th> @Html.DisplayNameFor(model => model.Country)</th>
                <th> @Html.DisplayNameFor(model => model.Street)</th>
                <th> @Html.DisplayNameFor(model => model.City)</th>
                <th> @Html.DisplayNameFor(model => model.NoHouse)</th>
                <th> @Html.DisplayNameFor(model => model.Zip)</th>
                <th> @Html.DisplayNameFor(model => model.WhatSpaceCanUseGuests)</th>
                <th> @Html.DisplayNameFor(model => model.SpecialItem)</th>
                <th> @Html.DisplayNameFor(model => model.Photo)</th>
                <th> @Html.DisplayNameFor(model => model.Describe)</th>
                <th> @Html.DisplayNameFor(model => model.PhoneNumber)</th>
                <th> @Html.DisplayNameFor(model => model.Checkin)</th>
                <th> @Html.DisplayNameFor(model => model.Checkout)</th>
                <th> @Html.DisplayNameFor(model => model.Price)</th>
                <th> @Html.DisplayNameFor(model => model.Reserved)</th>
                <th> @Html.DisplayNameFor(model => model.OwnerIdFk)</th>
                <th> @Html.DisplayNameFor(model => model.OwnerIdFkNavigation)</th>
                <th> Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MaxGuest</td>
                    <td>@item.NrBathroom</td>
                    <td>@item.Country</td>
                    <td>@item.Street</td>
                    <td>@item.City</td>
                    <td>@item.NoHouse</td>
                    <td>@item.Zip</td>
                    <td>@item.WhatSpaceCanUseGuests</td>
                    <td>@item.SpecialItem</td>
                    <td>@item.Photo</td>
                    <td>@item.Describe</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.Checkin</td>
                    <td>@item.Checkout</td>
                    <td>@item.Price</td>
                    <td>@item.Reserved</td>
                    <td>@item.OwnerIdFk</td>
                    <td>@item.OwnerIdFkNavigation</td>
                    <td>
                        <a asp-action="Edit" asp-controller="Room" asp-route-id="@item.RoomId" class="btn btn-primary">Edit</a>
                        <a asp-action="Delete" asp-controller="Room" asp-route-id="@item.RoomId" class="btn btn-warning">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>

<style>
    .ul.pagination {
        display: inline-block;
        padding: 0;
        margin: 0;
    }

    ul.pagination li {
        display: inline;
    }

        ul.pagination li a {
            color: black;
            float: left;
            padding: 8px 16px;
            text-decoration: none;
            transition: background-color .3s;
        }

            ul.pagination li a.active {
                background-color: #4CAF50;
                color: white;
            }

            ul.pagination li a:hover:not(.active) {
                background-color: #ddd;
            }
</style>
<nav aria-label="NewsFeeds navigation example">
    <vc:pager paging-list="@Model" />
</nav>