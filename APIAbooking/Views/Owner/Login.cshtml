@model APIAbooking.Models.RoomOwner



<html>
<head>
    <link rel="stylesheet" type="text/css" href="~/css/LoginFrontEnd/LoginStyle.css" />
</head>
<body>

    <form class="form-control" asp-action="Login" method="post">
        <div class="position-relative">
            <h4 style="color:green">@ViewBag.Message</h4>
            <br />
            <h3>Login here</h3>

                <div>
                    <br />
                    <br />
                    <label>Email</label><br />
                    <input asp-for="Email" class="w3-input" type="text" placeholder="Username or Email"><br />
                    <small style="color:red">@ViewBag.Message</small>
                </div>

                <div>
                    <label>Password</label><br />
                    <input asp-for="Password" class="w3-input" type="password" placeholder="Password"><br />
                    <small style="color:red">@ViewBag.Message</small>
                    <br />
                </div>
            <div class="form-group">
                <button type="submit"  class="btn btn-primary" style="background-color:#d09a64">Login</button>
            </div>
        </div>

    </form>

</body>
</html>

