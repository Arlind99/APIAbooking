@model APIAbooking.Models.Client
@{
    ViewData["Title"] = "Login";
}
<html>
<head>
    
</head>
<body>
    <h4>@ViewBag</h4>
    <form class="form-control" asp-action="Login">
        <div class="position-relative">
            <h3 class="text-center">Login here</h3>
            <div class="form-group">
                <label>Username or Email</label>
                <input asp-for="Email" class="w3-input" type="text" placeholder="Username or Email">
            </div>
            <div>
                <label>Email</label>
                <input  asp-for="Password" class="w3-input" type="password" placeholder="Password">
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" style="background-color:#d09a64" />
            </div>
        </div>

    </form>

</body>
</html>


